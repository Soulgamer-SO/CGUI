{
    "version": "2.0.0",
    "configurations": [
        {
            "type": "vgdb",
            "request": "launch",
            "preLaunchTask": "make_debug",
            "name": "LinuxDebugMake",
            "program": "${workspaceFolder}/build/debug/cgui-app",
            "stopOnEntry": false
        },
        {
            "type": "vgdb",
            "request": "launch",
            "preLaunchTask": "make_release",
            "name": "LinuxReleaseMake",
            "program": "${workspaceFolder}/build/debug/cgui-app",
            "stopOnEntry": false
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "make_debug",
            "name": "WinDebugMake",
            "program": "${workspaceFolder}/build/debug/cgui-app.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "make_release",
            "name": "WinReleaseMake",
            "program": "${workspaceFolder}/build/release/cgui-app.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}